<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <size
        android:width="2dp"
        android:height="15dp" />
    <!-- 填充的颜色 -->
    <solid android:color="@color/main_page_cursor_start" />
    <!--设置渐变-->
    <gradient
        android:angle="90"
        android:endColor="@color/main_page_cursor_end"
        android:startColor="@color/main_page_cursor_start" />
    <!--angle控制渐变的方向-->
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="5dp" />
